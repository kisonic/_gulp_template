columns = 12
gutter = 15px

screen_xs = 480px
screen_xs_min = screen_xs

screen_sm = 768px
screen_sm_min = screen_sm

screen_md = 992px
screen_md_min = screen_md

screen_lg = 1200px
screen_lg_min = screen_lg

screen_xl = 1401px
screen_xl_min = screen_xl

screen_xs_max = (screen_sm_min - 1)
